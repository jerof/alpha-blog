<div class="container">
  <div class="col-sm-8 col-sm-offset-2">
    <% if obj.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h2 class="panel-title"><%= pluralize(obj.errors.count, "error") %> prevented the article from being saved:</h2>
        <div class="panel-body">
            <ul>
              <% obj.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
