<%= render 'shared/errors', obj: @article %>

<%= form_for(obj, :html => { class: "form-horizontal", role:"form" }) do |f| %>
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= f.label :title %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :title, class:"form-control", placeholder: "Enter title", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= f.label :description %>
    </div>
    <div class="col-sm-8">
      <%= f.text_area :description, class:"form-control", placeholder: "Enter description", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-offset-2 col-sm-8">
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
          <% cb.label(class:"checkbox-inline input_checkbox") {cb.check_box(class:"checkbox") + cb.text} %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <%= f.submit class:"btn btn-primary" %>
    </div>
  </div>
</div>
</div>
<% end %>

<p align="center">[ <%= link_to "Return to articles page", articles_path %> ]</p>
