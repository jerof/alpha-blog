<h1 align="center">Login</h1>

<div class="container">
  <%= form_for(:session, :html => { class: "form-horizontal", role:"form" }) do |f| %>

    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label :email %>
      </div>
      <div class="col-sm-8">
        <%= f.email_field :email, class:"form-control", placeholder: "Enter email", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label :password %>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password, class:"form-control", placeholder: "Enter password", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= f.submit "Login", class:"btn btn-primary" %>
      </div>
    </div>
  </div>
  </div>
  <% end %>

</div>

<p align="center">[ <%= link_to "Return to articles page", articles_path %> ]</p>
